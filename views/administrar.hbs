<div class="container" style="width:50%; padding: 80px">
    <br />
    <div class="login-form" style="margin-left: 170px; margin-right: 170px;">
        <form id="form" action="javascript:0;">
            <h2 class="text-center">Log in</h2>       
            <div class="form-group">
                <input id="username" type="text" class="form-control" placeholder="Username" name="username" required="required" autofocus>
            </div>
            <div class="form-group">
                <input id="password" type="password" class="form-control" placeholder="Password" name="password" required="required">
            </div>
            <div id="resultLogin" class="alert alert-danger" role="alert" style="display: none;">
                Login incorrecto
            </div>
            <div class="form-group">
                <button id="submitForm"  class="btn btn-primary btn-block">Log in</button>
            </div>       
        </form> 
    </div>
</div>

<script>

$('#submitForm').click(function(e){

    var resultMessage = $('#resultLogin');
    resultMessage.hide();

    var username = $('#username').val();
    var password = $('#password').val();

    $.ajax({
        url:"/administrar/login",
        method: "POST",
        data : {
            'username' : username,
            'password' : password
        },
        cache : false,
        success : function (data) {
            
            var originLocation = window.location.origin;
            window.location.href = originLocation + '/administrar/config';
        },
        error : function () {
            resultMessage.show();
        }
    });

});


</script>

